<!DOCTYPE html>
<html>
  <head>
    <title>Trello Minus - Sails App</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link rel="stylesheet" href="/styles/importer.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/styles.css">

  </head>

  <body>
    <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/"> Trello Minus </a>
          </div>
          <% if(typeof req.session.user !== 'undefined') { %>
              <div class="btn-group pull-right" role="group" aria-label="..." style="margin-top: 6px">
                <a href="/user/<%= req.session.user.name %>" class="btn btn-default"><%= req.session.user.name %></a>
                <button id="add-organization-button" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span> Organization</button>
                <a href="/signout" class="btn btn-danger">Sign out</a>
              </div>
          <% } else {%>
            <div class="btn-group pull-right" role="group" aria-label="..." style="margin-top: 6px">
              <a href="/signin" class="btn btn-primary">Sign in</a>
              <button class="btn btn-default disabled">OR</button>
              <a href="/signup" class="btn btn-success">Sign up</a>
            </div>
          <% } %>

        </div>
    </nav>
    <div class="col-lg-1"></div>
    <div id="body" class="col-lg-10">
        <%- partial("partials/add_organization.ejs") %>
        <%- body %>
    </div>


    <script src="/js/dependencies/sails.io.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="/js/essentials.js"></script>
  </body>
</html>
